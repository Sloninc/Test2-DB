<Window x:Class="Test2.View.MessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2.ViewModel"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MessageView" Height="150" Width="400">
    <Grid Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40.04"/>
        </Grid.RowDefinitions>
        <TextBlock  x:Name="MessageText" TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   LineHeight="Auto"
                   Padding="5,10,5,10"
                   TextWrapping="Wrap" Height="69" Width="374"/>
        <Button Content="OK" Click="Button_Click" Margin="130,4,130,7" Grid.Row="1"/>
    </Grid>
</Window>
