<Window x:Class="Test2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Name="Tests">
                <TabItem.Header>
                    <TextBlock Text="Tests"/>
                </TabItem.Header>
                <TabItem.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Редактировать" Command="{Binding OpenEditItemWnd}"/>
                        <MenuItem Header="Удалить" Command="{Binding DeleteItem}"/>
                    </ContextMenu>
                </TabItem.ContextMenu>
                <ListView ItemsSource="{Binding AllTests}"
                          SelectedItem="{Binding SelectedTest}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="TestID"
                                            DisplayMemberBinding="{Binding Path=TestId}"/>
                            <GridViewColumn Header="TestDate"
                                            DisplayMemberBinding="{Binding Path=TestDate}"/>
                            <GridViewColumn Header="BlockName"
                                            DisplayMemberBinding="{Binding Path=BlockName}"/>
                            <GridViewColumn Header="Note"
                                            DisplayMemberBinding="{Binding Path=Note}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Name="Parameters">
                <TabItem.Header>
                    <TextBlock Text="Parameters"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding AllParameters}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ParameterId"
                                            DisplayMemberBinding="{Binding Path=ParameterId}"/>
                            <GridViewColumn Header="TestId"
                                            DisplayMemberBinding="{Binding Path=TestId}"/>
                            <GridViewColumn Header="ParameterName"
                                            DisplayMemberBinding="{Binding Path=ParameterName}"/>
                            <GridViewColumn Header="RequiredValue"
                                            DisplayMemberBinding="{Binding Path=RequiredValue}"/>
                            <GridViewColumn Header="MeasuredValue"
                                            DisplayMemberBinding="{Binding Path=MeasuredValue}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Новый тест" Command="{Binding OpenAddNewTestWnd}"/>
            <Button Content="Новый параметр" Command="{Binding OpenAddNewParameterWnd}"/>
        </StackPanel>
                    
    </Grid>
</Window>
